rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // USER FILES
    // ============================================
    // All user files must be under /users/{uid}/
    // Only the authenticated owner can read/write
    
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    // Avatars: small images only (5MB, image content type)
    match /users/{uid}/avatars/{fileName} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid)
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Track thumbnails: images up to 2MB
    match /users/{uid}/tracks/{trackId}/{fileName} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid)
                   && request.resource.size < 2 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // ============================================
    // DENY ALL OTHER ACCESS
    // ============================================
    // Only explicitly matched paths above are allowed.
    // Any path not under a specific match rule is denied by default.
    
  }
}
